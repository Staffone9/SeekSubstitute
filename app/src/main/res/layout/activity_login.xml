<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.staffonechristian.seeksubstitute.LoginActivity"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/progressLinear"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="100dp"
            >

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/progressBarTitle"
                android:layout_gravity="center"
                android:text="Loading..."
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wholeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/login"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/envelope"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"/>


        <EditText
            android:id="@+id/emailL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginTop="24dp"
            android:hint="Enter Email Address" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/key"
            android:scaleType="fitCenter"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"/>


        <EditText
            android:id="@+id/passL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginTop="24dp"
            android:hint="Enter Password"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/loginEmailButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_round"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="Login" />

    <Button
        android:id="@+id/registerEmailButton"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/second_button"
        android:text="Register" />
        </LinearLayout>

</LinearLayout>
</ScrollView>